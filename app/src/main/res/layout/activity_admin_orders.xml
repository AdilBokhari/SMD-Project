<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminOrdersActivity">

    <TextView
        android:id="@+id/adminOrdersTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#5619B1"
        android:textColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminOrdersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adminOrdersTitle"
        android:padding="8dp" />

    <TextView
        android:id="@+id/emptyOrdersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No orders to manage"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>